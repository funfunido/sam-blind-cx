{
    "name": "Tab Sam",
    "description": "When you press TAB, it reads the current element. Useful for blind people.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "sam.html"
    },
    
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      
    
    "commands": {
        "talk": {
            "suggested_key": {
                "default": "Ctrl+Down",
                "mac": "Command+Down"
            },
            "description": "When you press TAB, it reads the current element."
        },
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Up",
                "mac": "Command+Up"
      }
    }
    },
    "permissions": ["activeTab", "scripting", "tabs"],
    "background": {
        "service_worker": "sam.js",
        "type": "module"
    }
     /*"content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["sam.js"]
    }
  ] 
  you can add the "activeTab permission back in if u need"  
  */
}